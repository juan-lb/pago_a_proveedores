$('#modal').modal();

<% emails = @setting.send("#{params[:target]}_emails") %>

input  = $('#js-toInput');
emails = '[';

<% emails.each do |email| %>
  emails += '"<%= email %>",'
<% end %>

emails = emails.slice(0, -1) + ']';
input.val(emails)

