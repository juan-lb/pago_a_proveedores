<div class="modal-header" id="js-balanceDetail">
  <button
    type="button"
    class="close"
    data-dismiss="modal">
    &times;
  </button>

  <h4 class="modal-title">
    Edici√≥n de emails
  </h4>
</div>

<div class="modal-body">
  <%= form_for @setting,
    url: update_emails_settings_path,
    method: :put,
    remote: true do |f| %>

    <%= f.hidden_field :target, value: params[:target] %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-4 col-md-offset-3">
          <%= f.label 'Emails' %>
          <%= f.text_field :emails,
            value: @setting.send("#{params[:target]}_emails"),
            id:    'js-toInput',
            class: 'form-control'
          %>
        </div>

        <div class="col-md-2">
          <%= f.submit 'Guardar',
            data: {
              disable_with: 'Espere...'
            },
            class: 'btn btn-success margin-top-25'
          %>
        </div>
      </div>
    </div>
  <% end %>
</div>
