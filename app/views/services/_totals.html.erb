<div class="info-box">
  <span class="info-box-icon bg-aqua">
    <i><%= payment_group.currency_symbol %></i>
  </span>

  <div class="info-box-content">
    <span class="info-box-text">Total </span>
    <span class="info-box-number" id="js-paymentTotal">
      <%= number_with_precision(
        payment_group.total,
        precision: 2
      ) %>
    </span>
  </div>
</div>

