<section class="content">
  <div class="container-fluid">
    <div class="box box-solid">
      <div class="box-header">
        <div class="home row text-center">
          <div class="col-md-12">
            <h3><%= t :welcome %>, <%= @current_profile.email %> </h3>
            <p class="lead"><%= t :administration %></p>
          </div>
        </div>
      </div>

      <div class="box-body">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= link_to :admin_profiles do %>
              <div class="col-md-12">
                <div class="info-box">
                  <span class="info-box-icon bg-green">
                    <i class="fa fa-user"></i>
                  </span>

                  <div class="info-box-content">
                    <span class="info-box-text bold">
                      Perfiles de usuario
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
