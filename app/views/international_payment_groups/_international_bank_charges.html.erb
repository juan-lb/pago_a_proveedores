<h4>Gastos bancarios</h4>

<div class="row">
  <div class="col-md-4">
    <%= f.input :commission_total,
      as:    :decimal,
      class: 'form-control'
    %>
  </div>

  <div class="col-md-4">
    <%= f.label :commission %>
    <%= f.number_field :commission,
      class: 'form-control js-formulaInput',
      min:   0,
      step:  0.01
    %>
  </div>

  <div class="col-md-4">
    <%= f.input :iva,
      as:    :decimal,
      class: 'form-control'
    %>
  </div>
</div>

