<div class="row">
  <div class="col-md-12">
    <div class="box box-warning collapsed-box">
      <div class="box-header">
        <div class="box-title bold">
          Cuentas
        </div>

        <div class="box-tools pull-right">
          <button
            class="btn btn-box-tool"
            data-widget="collapse">
            <i class="fa fa-minus"></i>
          </button>
        </div>
      </div>

      <div class="box-body">
        <table class="table tablesorter js-dataTable">
          <thead>
            <tr>
              <th>Cuenta</th>
              <th class="js-USD-col js-currency-col filter-false">
                DÃ³lares
              </th>
              <th class="js-ARS-col js-currency-col filter-false">
                Pesos
              </th>
            </tr>
          </thead>

          <tbody>
            <% if @manager.receipts.size == 0 %>
              <tr class="text-center text-danger bold" id="js-noData">
                <td colspan="3">No se registran recibos</td>
              </tr>
            <% end %>

            <%= render partial: 'account',
              collection: @manager.accounts.values
            %>
          </tbody>
        </table>
      </div>

      <div class="overlay hidden js-loadingData">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
    </div>
  </div>
</div>
