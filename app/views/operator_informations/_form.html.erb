<div class="modal-header" id="js-paymentReport">
  <button
    type="button"
    class="close"
    data-dismiss="modal">
    &times;
  </button>
  <h4 class="modal-title"> Generaci√≥n de email de operador </h4>
</div>

<div class="modal-body">
  <div class="row">
    <%= form_for @operator_information, remote: true do |f| %>
      <div class="col-md-3 col-md-offset-3">
        <%= f.label 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.hidden_field :operator_aptour_id %>
      </div>

      <div class="col-md-3 col-md-offset-1">
        <%= f.submit 'Generar',
          data: { disable_with: 'Generando...' },
          class: 'btn btn-success margin-top-25'
        %>
      </div>
    <% end %>
  </div>
</div>
