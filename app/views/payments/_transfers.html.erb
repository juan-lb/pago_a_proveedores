  <div class="box box-primary">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-md-4">
          <h3 class="box-title"><%= t(:impact_aptour) %></h3>
        </div>
      </div>

      <div class="box-tools pull-right">
        <button
          class="btn btn-box-tool"
          data-widget="collapse">
          <i class="fa fa-minus"></i>
        </button>
      </div>
    </div>

    <div class="box-body">
      <% if @payment_group.is_debit? %>
        <div class="col-md-6">
          <div class="info-box">
            <% if @payment_group.payment.in_aptour %>
              <span class="info-box-icon bg-green">
                <i class="fa fa-check"></i>
              </span>
            <% else %>
              <span class="info-box-icon bg-red">
                <i class="fa fa-close"></i>
              </span>
            <% end %>

            <div class="info-box-content">
              <span class="info-box-text">
                Reserva
                <%= @payment_group.payment.principal_reserve_id %> (P)
              </span>
              <span class="info-box-number">
                <%= @payment_group.currency_symbol %>
                <%= number_with_precision(@total, precision: 2) %>
              </span>
            </div>
          </div>
        </div>
      <% end %>

      <%= render partial: 'payments/transfer',
        collection: @payment_group.payment.transfers
      %>
    </div>
  </div>
